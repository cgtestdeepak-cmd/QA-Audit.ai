{
  "manifest_version": 3,
  "name": "QA-Audit.ai",
  "version": "1.0.0",
  "description": "AI-powered QA and Accessibility Auditor using Gemini 2.5.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "QA-Audit.ai"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}